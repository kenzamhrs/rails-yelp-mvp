<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.category %></p>
<p><%= @restaurant.phone_number %></p>

<br>

<p><%= link_to "Edit restaurant", edit_restaurant_path(@restaurant) %></p>

<p><%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %></p>

<%= link_to "Delete #{@restaurant.name}",
            restaurant_path(@restaurant),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

<p><%= link_to "Back to list", restaurants_path(@restaurants) %></p>
